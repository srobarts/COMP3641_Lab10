<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

	<managed-bean>
	  <managed-bean-name>conversionBean</managed-bean-name>
	  <managed-bean-class>com.lab10.ConversionBean</managed-bean-class>
	  <managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<application>
      <resource-bundle>
         <base-name>com.lab10.messages</base-name>
         <var>msgs</var>
      </resource-bundle>
   </application>
   
   <validator> 
      <validator-id>com.lab10.NumberValidator</validator-id>
      <validator-class>com.lab10.NumberValidator</validator-class> 
   </validator>

</faces-config>
